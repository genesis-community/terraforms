[alias]
	st = status
	ci = commit
	cia = commit --amend
	br = branch
	co = checkout
	df = diff
	dfc = diff --cached
	dfp = diff --stat -p
	who = shortlog -s --
	lg = log -n 20 --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %an (via %cn)' --abbrev-commit --date=relative
	last = cat-file commit HEAD
	stc = diff --stat --name-status --cached
	up = "!git remote update ; git gc"
	log1 = log --pretty=oneline --abbrev-commit --decorate
	lc = log ORIG_HEAD.. --stat --no-merges
	undo = reset --hard
	ss = stash save
	sp = stash pop
	sls = stash list
	subu = submodule update
[color]
	ui = auto
	diff = auto
[color "diff"]
	new = green bold
	old = red bold
	meta = white
	func = magenta bold
	frag = yellow bold
	whitespace = blue reverse
[color "status"]
	added = green bold
	changed = red bold
	untracked = cyan bold
[core]
	excludesFile = ~/.gitignore
